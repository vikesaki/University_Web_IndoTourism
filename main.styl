  font-size: 35px

h2()
  font-size: 25px
  font-style: oblique //italic

.h1, .h2
  text-align: center
//color: black

.h1
  h1()

.h2
  h2()

// Галерея сериалов:

.img-1
  img
    width 200px
    height 150px

img
  align middle
  width 300px
  height 200px
  margin 10px
  border-radius: 7px
  box-shadow: 0px 5px 10px 0px rgba(223, 202, 86, 0.767)
  border 2px solid accent-yel

.img-1
  width: 100%
  margin: auto
  min-width 900px

.block-title
  min-width 900px

a.no-dec
  &:hover
    text-decoration: none


a.no-dec > .block-title
  p:hover
    color: dark-accent-blue

@media (min-width: 900px)
  .img-1, .block-title, details
    width: 900px
    margin: auto
  .cont-2
    width: 900px
    margin: auto

@media (max-width: 1200px)
  hr
    width: 900px

@media (min-width: 1200px)
  .cont-2
    width: 1200px
    margin: auto
  .block-title, hr
    width: 1200px
    margin: auto
  .img-1
    width: 1200px
    img
      width 280px
      height 200px

.img-1 img
  border-radius: 10px

// Галарея сверху

.block-title > p, .main-title
  padding 2px 7px

.block-title
  display: grid
  grid-template-columns min-content auto //repeat(2, 1fr)
  grid-template-rows 40px 25px auto //repeat(2, 1fr)
  min-height: 250px
  .subtitle
    display: grid
    grid-row 2/3
    p
      color: dark-accent-blue
      padding-left: 7px
  .main-title
    display: grid
    grid-row 3/4
    grid-column:  2/3

.block-title > img
  grid-row 1/3

.hel-1
  min-height: 420px
  img
    height: 400px

.block-title > p
  h2()
  font-style: normal
  font-weight: bold

// Footer:

.page-footer
  padding: 1rem;
  background: #333;
  color: #fff;
  text-align: center;

.page-footer.fixed-bottom
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;

.fixed-bottom
  p
    margin: 0px
    padding: 0px
    color: rgb(184, 184, 184)
  a:hover
    color: my-orange

p.sub-title-2
  height: 20px
  font-style: italic
  color: gray

// Page 2: Раскрывающиеся списки

.table p, .table input, .left-edge-1, .right-edge-1
  //bord()

.table-2-2
  p input
    height: 25px

details
  margin-left: 50px

.left-edge-1, .right-edge-1
  margin: 0px 10px

.left-edge-2, .right-edge-2, .center-edge-2
  margin: 0px 10px
  display: grid
//bord()

.left-edge-2
  grid-column 1/2

.center-edge-2
  grid-column 2/3

.right-edge-2
  grid-column 3/4

p.title-1
  font-weight: bold

.title-1-1
  display: grid
  grid-column 1/3
  text-align: center
  font-size: x-large

.title-1-3
  display: grid
  grid-column 1/3
  text-align: center
  font-size: x-large
  height: 50px

.title-1-2
  display: grid
  grid-column 1/4
  text-align: center
  font-size: x-large

.table
  display: grid
  grid-template-columns repeat(2, 1fr)
  grid-template-rows 50px 1fr //repeat(5, 1fr)
  width: 80%
  margin: 20px auto
  padding: 10px
  background-color: white
  border-radius: 10px
  box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.25)
  & > button
    display: grid
    grid-column: 1/3
    width: 45%
    margin: auto
    border: solid black 2px
    border-radius: 5px
    background-color: bg-blue
    &:hover
      background-color: bg-yel
      border: dashed black 2px

.table-2
  display: grid
  grid-template-columns max-content max-content auto //repeat(2, 1fr)
  grid-template-rows 1fr //repeat(5, 1fr)
  width: 80%
  margin: 20px auto
  padding: 10px
  background-color: white
  border-radius: 10px
  box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.25)
  & > button
    display: grid
    grid-column: 1/4
    width: 45%
    margin: auto
    border: solid black 2px
    border-radius: 5px
    background-color: bg-blue
    &:hover
      background-color: bg-yel
      border: dashed black 2px

.table > p, .table > input
  display block

.right-edge-1
  display: grid
  grid-column: 2/3

@media (min-width 800px)
  details
    width 800px
    margin auto


